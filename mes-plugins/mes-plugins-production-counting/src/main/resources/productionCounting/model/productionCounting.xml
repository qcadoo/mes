<model name="productionCounting" activable="true" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<boolean name="generated" />
		<belongsTo name="order" plugin="orders" model="order"
			required="true" />
		<belongsTo name="product" plugin="basic" model="product" />
		<string name="name" required="true">
			<validatesLength max="1024" />
		</string>
		<datetime name="date" />
		<string name="worker" />
		<string name="description" />
		<string name="fileName" />
	</fields>
	<hooks>
		<validatesWith
			class="com.qcadoo.mes.productionCounting.validators.ProductionCountingValidators"
			method="validatesWith" />
		<onCopy
			class="com.qcadoo.mes.productionCounting.hooks.ProductionCountingHooks"
			method="onCopy" />
	</hooks>
	<identifier expression="#name" />
</model>