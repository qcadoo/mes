<model name="recordOperationProductInComponent" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="productionRecord" model="productionRecord" />
		<belongsTo name="product" model="product" plugin="basic" />
		<decimal name="plannedQuantity" persistent="false" />
		<decimal name="usedQuantity">
			<validatesRange from="0" exclusively="false" />
		</decimal>
		<decimal name="balance" />
	</fields>
	<hooks>
		<onView
			class="com.qcadoo.mes.productionCounting.hooks.RecordOperationProductInComponentHooks"
			method="fillPlannedQuantity" />
	</hooks>
</model>