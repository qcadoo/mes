<model name="productionRecord" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" activable="true"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" unique="true" >
			<validatesLength max="255"/> 
		</string>
		<belongsTo name="order" model="order" plugin="orders"
			required="true" />
		<belongsTo name="orderOperationComponent" model="orderOperationComponent"
			plugin="productionScheduling" />
		<belongsTo name="shift" model="shift" plugin="basic"
			required="true" />
		<enum name="state" values="01draft,02accepted,03declined"
			default="01draft" required="true" />
		<hasMany name="recordOperationProductInComponents" joinField="productionRecord"
			model="recordOperationProductInComponent" cascade="delete" />
		<hasMany name="recordOperationProductOutComponents" joinField="productionRecord"
			model="recordOperationProductOutComponent" cascade="delete" />

		<boolean name="lastRecord" />

		<integer name="machineTime" />
		<integer name="machineTimeBalance" />
		<integer name="laborTime" />
		<integer name="laborTimeBalance" />
		<integer name="plannedTime" />
		<integer name="plannedMachineTime" />
		<integer name="plannedLaborTime" />
		
		<belongsTo name="staff" model="staff" plugin="basic" />
		<belongsTo name="workstationType" model="workstationType" plugin="basic" />
		<belongsTo name="division" model="division" plugin="basic" />
		
		<hasMany name="loggings" model="productionRecordLogging" joinField="productionRecord" cascade="delete" />
	</fields>
	<hooks>
		<onSave
			class="com.qcadoo.mes.productionCounting.internal.states.ProductionCountingChangeStateHook"
			method="changedState" />
		<onSave
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="generateData" />
		<onSave
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="copyProductsFromOrderOperation" />
		<onSave
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="countPlannedTimeAndBalance" />
		<onCreate 
			class="com.qcadoo.mes.productionCounting.internal.logging.ProductionRecordLoggingService"
			method="logCreateEvent" />
		<onCopy 
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="changeStateToDefault" />
		<validatesWith
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="checkTypeOfProductionRecording" />
		<validatesWith
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="checkIfPartialIsAllowed" />
		<validatesWith
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="checkIfOrderIsStarted" />
		<validatesWith
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="checkIfExistsFinalRecord" />
		<validatesWith
			class="com.qcadoo.mes.productionCounting.internal.ProductionRecordService"
			method="checkIfOperationIsSet" />
	</hooks>
	<identifier expression="#number" />
</model>