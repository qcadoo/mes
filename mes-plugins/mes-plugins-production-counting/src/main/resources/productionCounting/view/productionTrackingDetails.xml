                        <option type="order" column="number" direction="desc"/>

                        <option type="searchable"
                                value="number,name,plannedQuantity,usedQuantity,unit,producedSum,wastesSum,remainingQuantity,wastesQuantity,typeOfMaterial"/>
                        <option type="orderable"
                                value="number,name,plannedQuantity,usedQuantity,unit,producedSum,wastesSum,remainingQuantity,wastesQuantity,typeOfMaterial"/>

                        <option type="creatable" value="false"/>
                        <option type="deletable" value="false"/>

                        <option type="fullscreen" value="true"/>
                        <option type="multiselect" value="false"/>
                    </component>
                </layoutElement>
                <layoutElement column="1" row="6" minHeight="5">
                    <component type="grid" name="trackingOperationProductInComponents"
                               reference="trackingOperationProductInComponents"
                               useDto="true"
                               source="#{form}.trackingOperationProductInComponentDtos"
                               model="trackingOperationProductInComponentDto"
                               defaultEnabled="false">
                        <script>
                            <![CDATA[
							    var addToAnomaliesListBtn = #{window}.getRibbonItemOrNull("anomalies.addToAnomaliesList");
							    var useReplacementBtn = #{window}.getRibbonItemOrNull("replacements.useReplacement");
                                var listener = {
                                    onChange: function(selectedEntitiesArray) {
                                        if (addToAnomaliesListBtn) {
                                            var state = #{state}.getValue().content.value;
                                            if (state != "01draft") {
                                                addToAnomaliesListBtn.disable("#{translate(productionCounting.productionTrackingDetails.window.ribbon.addToAnomaliesList.label)}");
                                            } else if (!selectedEntitiesArray || selectedEntitiesArray.length == 0) {
                                                addToAnomaliesListBtn.disable("#{translate(productionCounting.productionTrackingDetails.window.ribbon.addToAnomaliesList.label)}");
                                            } else {
