<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view" 
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="parameters"
	modelName="parameter" 
	menuAccessible="true">
	
	<component type="window" name="window">
		<ribbon>
			<group name="actions" hasLabel="false">
				<bigButton name="save" icon="saveIcon24.png" action="#{form}.performSave;" />
			</group>
		</ribbon>
		<windowTab name="mainTab" reference="mainTab">
			<component type="form" name="parameter" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="2">
					<layoutElement column="1" row="1">
						<component type="lookup" name="currency" field="currency" reference="currency">
							<option type="column" name="currency" fields="currency" link="true" />
							<option type="required" value="true" />
							<option type="searchable" value="currency,alphabeticCode" />
							<option type="orderable" value="currency,alphabeticCode" />
							<option type="expression" value="#alphabeticCode + ' - ' + #currency" />
							<option type="fieldCode" value="alphabeticCode" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="select" name="unit" field="#{form}.unit" reference="unit" hasLabel="true" hasDescription="true" >
						</component>
					</layoutElement>
				</component>
				<option type="header" value="true" />
				<option type="expression" value="' '" />
			</component>
		</windowTab>
		
	</component>
</view>