<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view" 
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="productsList"
	modelName="product"
	menuAccessible="true">
	
	<component type="window" name="window" reference="window">
		<ribbon>
			<template name="standardGridTemplate" />
			<group name="conversions">
				<bigButton name="getDefaultConversions" icon="genealogyIcon24.png" state="disabled">
					<script>
						<![CDATA[
							this.addOnChangeListener({
								onClick: function() {
									if(window.canClose()) {
										#{grid}.performEvent('getDefaultConversionsForGrid', []);
									}
								}
							});		
						]]>
					</script>
				</bigButton>
			</group>
		</ribbon>
		<component type="grid" name="products" reference="grid">
			<script>
				<![CDATA[
					var deleteButton = #{window}.getRibbonItem("actions.delete");
					var conversionsButton = #{window}.getRibbonItem("conversions.getDefaultConversions");
					var listener = {
						onChange: function(selectedEntitiesArray) {
							if (!selectedEntitiesArray || selectedEntitiesArray.length == 0) {
								deleteButton.disable();
								conversionsButton.disable();
							} else {
								var hasExternal = false;
								for (var i in selectedEntitiesArray) {
									if (selectedEntitiesArray[i].fields.externalNumber != '' && selectedEntitiesArray[i].fields.externalNumber != undefined) {
										hasExternal = true;
										break;	
									}
								}
								if (hasExternal) {
									deleteButton.disable("#{translate(basic.products.ribbon.message.someProductIsExternal)}");
								} else {
									deleteButton.enable();
								}
								conversionsButton.enable();
							}
						}
					}
					this.addOnChangeListener(listener);
				]]>
			</script>
			<option type="column" name="number" fields="number" link="true"
				width="150" />
			<option type="column" name="name" fields="name" link="true"
				width="300" />
			<option type="column" name="globalTypeOfMaterial" fields="globalTypeOfMaterial" />
			<option type="column" name="parent" fields="parent"  expression="#parent['number'] + ' - ' + #parent['name']"/>
			<option type="column" name="ean" fields="ean" />
			<option type="column" name="externalNumber" fields="externalNumber" hidden="true" />
			<option type="order" column="name" direction="asc" />
			<option type="searchable" value="number,name,globalTypeOfMaterial,ean" />
			<option type="orderable" value="number,name,globalTypeOfMaterial,ean" />
			<option type="correspondingView" value="basic/productDetails" />
			<option type="correspondingComponent" value="form" />
			<option type="fullscreen" value="true" />
			<option type="multiselect" value="true" />
			
			<listener event="getDefaultConversionsForGrid" class="com.qcadoo.mes.basic.ProductService" 
				method="getDefaultConversionsForGrid" />
		</component>
		<option type="fixedHeight" value="true" />
		<option type="header" value="false" />
	</component>
</view>