<model name="qualityCard"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true">
			<validatesLength max="255" />
		</string>
		<string name="name" required="true">
			<validatesLength max="2048" />
		</string>
		<string name="description">
			<validatesLength max="2048"/>
		</string>
		<enum name="state" values="01new,02accepted,03rejected" default="01new" required="true"/>

		<manyToMany name="products" model="product" joinField="qualityCards" lazy="true"/>
		<hasMany name="stateChanges" model="qualityCardStateChange" joinField="qualityCard" cascade="delete"/>

		<dictionary name="sampling" dictionary="sampling"/>
	</fields>
	<hooks/>
	<identifier expression="#number + ' - ' + #name" />
</model>
