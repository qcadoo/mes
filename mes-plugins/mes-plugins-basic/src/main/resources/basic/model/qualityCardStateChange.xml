<model name="qualityCardStateChange"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	   xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

	<fields>
		<!-- generic state change fields -->
		<datetime name="dateAndTime"/>
		<enum name="sourceState"
			  values="01new,02accepted,03rejected"/>
		<enum name="targetState"
			  values="01new,02accepted,03rejected"
			  required="true"/>
		<enum name="status"
			  values="01inProgress,02paused,03successful,04failure,05canceled"
			  required="true"/>
		<integer name="phase"/>
		<string name="worker"/>
		<belongsTo name="qualityCard" model="qualityCard"/>
		<belongsTo name="shift" model="shift"/>
	</fields>

	<hooks/>

</model>
