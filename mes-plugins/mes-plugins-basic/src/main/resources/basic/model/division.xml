<model name="division" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
    <fields>
        <string name="number" required="true" unique="true">
            <validatesLength max="255"/>
        </string>
        <string name="name" required="true">
            <validatesLength max="1024"/>
        </string>
        <belongsTo name="supervisor" model="staff"/>
        <belongsTo name="factory" model="factory"/>
        <!-- <manyToMany name="workstationTypes" model="workstationType"
            joinField="divisions" /> -->
        <hasMany name="workstations" model="workstation" joinField="division" cascade="nullify"/>
    </fields>

    <hooks/>

    <identifier expression="#number + ' - ' + #name"/>
</model>