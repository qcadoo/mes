<model name="costCalculation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true">
			<validatesLength max="255" />
		</string>
		<tree name="calculationOperationComponents" joinField="costCalculation"
			model="calculationOperationComponent" plugin="costNormsForOperation" cascade="delete" />
		<belongsTo name="product" model="product" plugin="basic"
			required="true" />
		<belongsTo name="defaultTechnology" model="technology"
			plugin="technologies" />
		<belongsTo name="technology" model="technology" plugin="technologies"
			required="true" />
		<decimal name="quantity" required="true" />
		<belongsTo name="order" model="order" plugin="orders" />
		<decimal name="totalMaterialCosts">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="totalMachineHourlyCosts">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="totalPieceworkCosts">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="totalLaborHourlyCosts">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="totalTechnicalProductionCosts">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="productionCostMargin" default="0">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="productionCostMarginValue" />
		<decimal name="materialCostMargin" default="0">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="materialCostMarginValue" />
		<decimal name="additionalOverhead" default="0">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="additionalOverheadValue" default="0" />
		<decimal name="totalOverhead">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="totalCosts">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="costPerUnit">
			<validatesUnscaledValue max="7" />
			<validatesScale max="3" />
		</decimal>
		<string name="description" >
			<validatesLength max="2024"/>
		</string>
		<boolean name="includeTPZ" default="true" />
		<boolean name="includeAdditionalTime" default="false"/>
		
		<enum name="sourceOfMaterialcosts" values="01currentGlobalDefinitionsInProduct,02fromOrdersMaterialCosts"
			required="true" default="01currentGlobalDefinitionsInProduct"/>
		<enum name="calculateMaterialCostsMode" values="01nominal,03lastPurchase,02average,04costForOrder"
			required="true" default="nominal" />
		<enum name="calculateOperationCostsMode" values="piecework,hourly"
			required="true" default="hourly" />
		<datetime name="dateOfCalculation" />
		<boolean name="generated" />
		<string name="fileName" />
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.costCalculation.CostCalculationModelValidators" method="checkIfTheTechnologyTreeIsntEmpty" />
		<onCopy
			class="com.qcadoo.mes.costCalculation.CostCalculationServiceImpl"
			method="clearGeneratedOnCopy" />
	</hooks>
	<identifier expression="#number + ' - ' + #name" />
</model>