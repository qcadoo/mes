<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="resourcesList" 
	modelName="resource" 
	menuAccessible="true">

	<component type="window" name="window">
		<ribbon>
			<template name="standardGridTemplate" excludeItems="actions.new, actions.copy, actions.delete" />
		</ribbon>

		<component type="grid" name="resourceGrid" reference="grid">
			<option type="column" name="locationNumber" fields="location"
				expression="#location['number']" />
			<option type="column" name="locationName" fields="location"
				expression="#location['name']" />
			<option type="column" name="productNumber" fields="product"
				expression="#product['number']" />
			<option type="column" name="productName" fields="product"
				expression="#product['name']" />
			<option type="column" name="quantity" fields="quantity" />
			<option type="column" name="productUnit" fields="product" 
				expression="#product['unit']" />
			<option type="column" name="price" fields="price" />
			<option type="column" name="time" fields="time" />

			<option type="order" column="productNumber" direction="asc" />

			<option type="searchable" value="locationNumber,locationName,productNumber,productName,quantity,productUnit,price,time" />
			<option type="orderable" value="locationNumber,locationName,productNumber,productName,quantity,productUnit,price,time" />

			<option type="correspondingView" value="materialFlowResources/resourceDetails" />
			<option type="correspondingComponent" value="form" />

			<option type="fullscreen" value="true" />
			<option type="multiselect" value="true" />
		</component>

		<option type="fixedHeight" value="true" />
		<option type="header" value="false" />
	</component>
</view>
