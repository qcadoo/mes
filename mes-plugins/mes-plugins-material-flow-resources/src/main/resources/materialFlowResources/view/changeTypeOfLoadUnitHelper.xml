<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      name="changeTypeOfLoadUnitHelper" modelName="palletStorageStateDto" modelPlugin="materialFlowResources">

    <component type="window" name="window" reference="window">

        <ribbon>
            <group name="navigation">
                <bigButton name="back" icon="backIcon24.png" state="enabled"
                           action="#{window}.performBackWithoutConfirm"/>
            </group>
            <group name="action">
                <bigButton name="changeTypeOfLoadUnit" icon="genealogyIcon24.png" state="enabled">
                    <script>
                        <![CDATA[
							this.addOnChangeListener({
								onClick: function() {
										#{form}.performEvent('changeTypeOfLoadUnit', []);
								}
							});
						]]>
                    </script>
                </bigButton>
            </group>
        </ribbon>

        <windowTab name="mainTab">
            <component type="form" name="form" reference="form">
                <component type="gridLayout" name="gridLayout" columns="2"
                           rows="1" hasBorders="false">
                    <layoutElement row="1" column="1">
                        <component type="input" name="typeOfLoadUnit" field="typeOfLoadUnit"
                                   reference="typeOfLoadUnit" defaultEnabled="never"/>
                        <component type="lookup" name="newTypeOfLoadUnit" field="newTypeOfLoadUnit"
                                   reference="newTypeOfLoadUnit">

                            <option type="searchable" value="name"/>
                            <option type="orderable" value="name"/>

                            <option type="expression" value="#name"/>
                            <option type="fieldCode" value="name"/>
                        </component>
                    </layoutElement>
                </component>

                <option type="header" value="true"/>
                <option type="expression" value="#palletNumber"/>

                <listener event="changeTypeOfLoadUnit"
                          method="changeTypeOfLoadUnit"
                          class="com.qcadoo.mes.materialFlowResources.listeners.ChangeTypeOfLoadUnitHelperListeners"/>
            </component>
        </windowTab>

    </component>

    <hooks/>
</view>