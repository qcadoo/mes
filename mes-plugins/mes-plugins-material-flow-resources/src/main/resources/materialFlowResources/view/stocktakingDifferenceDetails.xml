<view defaultAuthorizationRole="ROLE_MATERIAL_FLOW" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      name="stocktakingDifferenceDetails" modelName="stocktakingDifference">

    <component type="window" name="window" reference="window">
        <ribbon>
            <template name="standardFormTemplate" excludeItems="actions.saveNew,actions.copy,actions.delete"/>
        </ribbon>

        <windowTab name="mainTab" reference="mainTab">
            <component type="form" name="form" reference="form">
                <component type="gridLayout" name="stocktakingGridLayout"
                           hasBorders="false" columns="7" rows="7">
                    <layoutElement column="1" row="1" width="3">
                        <component type="lookup" name="storageLocation" field="storageLocation"
                                   reference="storageLocation" defaultEnabled="never">

                            <option type="searchable" value="number"/>
                            <option type="orderable" value="number"/>

                            <option type="expression" value="#number"/>
                            <option type="fieldCode" value="number"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="2" width="3">
                        <component type="lookup" name="palletNumber" field="palletNumber"
                                   reference="palletNumber" defaultEnabled="never">

                            <option type="searchable" value="number"/>
                            <option type="orderable" value="number"/>

                            <option type="expression" value="#number"/>
                            <option type="fieldCode" value="number"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="3" width="3">
                        <component type="lookup" name="typeOfLoadUnit" field="typeOfLoadUnit"
                                   reference="typeOfLoadUnit" defaultEnabled="never">

                            <option type="searchable" value="name"/>
                            <option type="orderable" value="name"/>

                            <option type="expression" value="#name"/>
                            <option type="fieldCode" value="name"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="4" width="3">
                        <component type="lookup" name="product" field="product"
                                   reference="product" defaultEnabled="never">
                            <option type="column" fields="name" name="name" link="true"/>

                            <option type="searchable" value="number,name"/>
                            <option type="orderable" value="number,name"/>

                            <option type="expression" value="#number + ' - ' + #name"/>
                            <option type="fieldCode" value="number"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="5" width="3">
                        <component type="lookup" name="batch" field="batch"
                                   reference="batch" defaultEnabled="never">

                            <option type="searchable" value="number"/>
                            <option type="orderable" value="number"/>

                            <option type="expression" value="#number"/>
                            <option type="fieldCode" value="number"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="6" width="3">
                        <component type="calendar" name="expirationDate" field="expirationDate"
                                   reference="expirationDate" defaultEnabled="never">
                            <option type="withTimePicker" value="false"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="7" width="3">
                        <component type="input" name="quantity" field="quantity"
                                   reference="quantity" defaultEnabled="never">
                            <option type="alignment" value="right"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="4" row="7" width="1">
                        <component type="input" name="quantityUNIT" reference="quantityUNIT"
                                   defaultEnabled="false" hasLabel="false">
                            <option type="textRepresentationOnDisabled" value="true"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="5" row="1" width="3">
                        <component type="select" name="type" reference="type"
                                   field="type" defaultEnabled="never">
                        </component>
                    </layoutElement>
                    <layoutElement column="5" row="2" width="3">
                        <component type="input" name="price" field="price"
                                   reference="price">
                            <option type="alignment" value="right"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="5" row="3" height="2" width="3">
                        <component type="textarea" name="description" field="description"/>
                    </layoutElement>
                </component>

                <option type="header" value="true"/>
                <option type="expression" value="#product['number']"/>
            </component>
        </windowTab>
    </component>

    <hooks>
        <beforeRender class="com.qcadoo.mes.materialFlowResources.hooks.StocktakingDifferenceDetailsHooks"
                      method="onBeforeRender"/>
    </hooks>
</view>
