<!--                                     <component type="awesomeDynamicList" name="additionalAttributes" -->
<!--                                                source="attributeValues" reference="additionalAttributes"> -->
<!--                                         <option type="hasButtons" value="false"/> -->
<!--                                         <option type="hasBorder" value="false"/> -->

<!--                                         <components> -->
