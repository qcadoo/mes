<view defaultAuthorizationRole="ROLE_MATERIAL_FLOW" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      name="stocktakingPositionDetails" modelName="stocktakingPosition">

    <component type="window" name="window" reference="window">
        <ribbon>
            <template name="standardFormTemplate" excludeItems="actions.copy"/>
        </ribbon>

        <windowTab name="mainTab" reference="mainTab">
            <component type="form" name="form" reference="form">
                <component type="gridLayout" name="stocktakingGridLayout"
                           hasBorders="false" columns="7" rows="10">
                    <layoutElement column="1" row="1" width="3">
                        <component type="lookup" name="storageLocation" field="storageLocation"
                                   reference="storageLocation">
                            <option type="column" fields="location" name="location" link="true"
                                    expression="#location['number']"/>

                            <option type="searchable" value="number,location"/>
                            <option type="orderable" value="number,location"/>

                            <option type="expression" value="#number"/>
                            <option type="fieldCode" value="number"/>

                            <criteriaModifier
                                    class="com.qcadoo.mes.materialFlowResources.criteriaModifiers.StorageLocationCriteriaModifiers"
                                    method="showStorageLocationsWithGivenIdsForLocation"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="2" width="3">
                        <component type="lookup" name="palletNumber" field="palletNumber"
                                   reference="palletNumber">

                            <option type="searchable" value="number"/>
                            <option type="orderable" value="number"/>

                            <option type="expression" value="#number"/>
                            <option type="fieldCode" value="number"/>

                            <listener event="onSelectedEntityChange"
                                      class="com.qcadoo.mes.materialFlowResources.listeners.StocktakingPositionDetailsListeners"
                                      method="fillTypeOfLoadUnitField"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="3" width="3">
                        <component type="lookup" name="typeOfLoadUnit" field="typeOfLoadUnit"
                                   reference="typeOfLoadUnit">

                            <option type="searchable" value="name"/>
                            <option type="orderable" value="name"/>

                            <option type="expression" value="#name"/>
                            <option type="fieldCode" value="name"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="4" width="3">
                        <component type="lookup" name="product" field="product"
                                   reference="product">
                            <option type="column" fields="name" name="name" link="true"/>

                            <option type="searchable" value="number,name"/>
                            <option type="orderable" value="number,name"/>

                            <option type="expression" value="#number + ' - ' + #name"/>
                            <option type="fieldCode" value="number"/>

                            <criteriaModifier
                                    class="com.qcadoo.mes.materialFlowResources.criteriaModifiers.ProductsCriteriaModifiers"
                                    method="showProductWithCategory"/>

                            <listener event="onSelectedEntityChange"
                                      class="com.qcadoo.mes.materialFlowResources.listeners.StocktakingPositionDetailsListeners"
                                      method="onProductChange"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="5" width="3">
                        <component type="lookup" name="batch" field="batch"
                                   reference="batch">
                            <option type="column" name="supplierName" fields="supplier"
                                    expression="#supplier?.get('name')"/>

                            <option type="searchable" value="number,supplierName"/>
                            <option type="orderable" value="number,supplierName"/>

                            <option type="expression" value="#number"/>
                            <option type="fieldCode" value="number"/>

                            <criteriaModifier
                                    class="com.qcadoo.mes.advancedGenealogy.criteriaModifier.BatchCriteriaModifier"
                                    method="filterByProduct"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="6" width="3">
                        <component type="calendar" name="expirationDate" field="expirationDate"
                                   reference="expirationDate">
                            <option type="withTimePicker" value="false"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="7" width="3">
                        <component type="input" name="quantity" field="quantity"
                                   reference="quantity">
                            <option type="alignment" value="right"/>

                            <listener event="onInputChange"
                                      class="com.qcadoo.mes.materialFlowResources.listeners.StocktakingPositionDetailsListeners"
                                      method="quantityChange"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="4" row="7" width="1">
                        <component type="input" name="quantityUNIT" reference="quantityUNIT"
                                   defaultEnabled="false" hasLabel="false">
                            <option type="textRepresentationOnDisabled" value="true"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="8" width="3">
                        <component type="input" name="quantityInAdditionalUnit" field="quantityInAdditionalUnit"
                                   reference="quantityInAdditionalUnit">
                            <option type="alignment" value="right"/>

                            <listener event="onInputChange"
                                      class="com.qcadoo.mes.materialFlowResources.listeners.StocktakingPositionDetailsListeners"
                                      method="additionalQuantityChange"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="4" row="8" width="1">
                        <component type="input" name="additionalUnit" reference="additionalUnit"
                                   defaultEnabled="false" hasLabel="false">
                            <option type="textRepresentationOnDisabled" value="true"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="9" width="3">
                        <component type="input" name="conversion" field="conversion"
                                   reference="conversion">
                            <option type="alignment" value="right"/>

                            <listener event="onInputChange"
                                      class="com.qcadoo.mes.materialFlowResources.listeners.StocktakingPositionDetailsListeners"
                                      method="quantityChange"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="10" width="3">
                        <component type="input" name="stock" field="stock"
                                   reference="stock" defaultEnabled="never">
                            <option type="alignment" value="right"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="4" row="10" width="1">
                        <component type="input" name="stockUNIT" reference="stockUNIT"
                                   defaultEnabled="false" hasLabel="false">
                            <option type="textRepresentationOnDisabled" value="true"/>
                        </component>
                    </layoutElement>
                </component>

                <option type="header" value="true"/>
                <option type="expression" value="#product['number']"/>
            </component>
        </windowTab>
    </component>

    <hooks>
        <beforeRender class="com.qcadoo.mes.materialFlowResources.hooks.StocktakingPositionDetailsHooks"
                      method="onBeforeRender"/>
    </hooks>
</view>
