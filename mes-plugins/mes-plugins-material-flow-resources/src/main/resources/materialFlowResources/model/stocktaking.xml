<model name="stocktaking" activable="true"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
    <fields>

        <string name="number" required="true" unique="true"/>
        <date name="stocktakingDate" required="true"/>
        <datetime name="generationDate" copyable="false"/>
        <dictionary name="category" dictionary="categories"/>
        <string name="description">
            <validatesLength max="2048"/>
        </string>
        <enum name="state" values="01draft,02inProgress,03finalized,04finished,05rejected" default="01draft" required="true"/>

        <enum name="storageLocationMode" values="01all,02selected" default="01all" required="true"/>
        <belongsTo name="location" model="location" plugin="materialFlow" required="true"/>

        <string name="fileName" copyable="false"/>
        <manyToMany name="storageLocations" model="storageLocation" joinField="stocktakings" copyable="true"/>
        <hasMany name="positions" model="stocktakingPosition" joinField="stocktaking" cascade="delete"/>
        <hasMany name="differences" model="stocktakingDifference" joinField="stocktaking" cascade="delete"/>
        <boolean name="wms" copyable="false" default="false"/>
        <enum name="stateInWMS" values="01waiting,02inProgress,03delayed,04partiallyRealized,05realized" copyable="false"/>
        <hasMany name="stateChanges" joinField="stocktaking" model="stocktakingStateChange"
                 cascade="delete"/>
        <hasMany name="documents" joinField="stocktaking" model="document"/>
    </fields>
    <hooks>
        <onCreate class="com.qcadoo.mes.materialFlowResources.hooks.StocktakingModelHooks" method="onCreate"/>
        <onSave class="com.qcadoo.mes.materialFlowResources.hooks.StocktakingModelHooks" method="onSave"/>
        <onCopy class="com.qcadoo.mes.materialFlowResources.hooks.StocktakingModelHooks" method="onCopy"/>
    </hooks>
</model>
