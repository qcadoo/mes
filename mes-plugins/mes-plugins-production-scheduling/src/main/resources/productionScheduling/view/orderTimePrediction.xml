<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="orderTimePrediction" menuAccessible="true" modelPlugin="orders"
	modelName="order">

	<component type="window" name="window" reference="window">
		<ribbon>
			<group name="navigation">
				<bigButton name="back" action="#{window}.performBack;" state="enabled"
					icon="backIcon24.png" />
			</group>
			<group name="timeOfTechnology">
				<bigButton name="countTimeOfTechnology" icon="generateIcon24.png"
					action="#{window}.fireEvent(calculateRealizationTime,technology);" state="enabled" />
			</group>
		</ribbon>
		<component type="form" name="form" reference="form">
		<component type="gridLayout" name="gridsLayout" columns="2"
				rows="7">
				<layoutElement column="1" row="1">
					<component type="lookup" field="technology" name="technology" reference="technology">
						<option type="required" value="true" />
						<option type="column" name="name" fields="name" link="true"
							width="200" />
						<option type="searchable" value="name" />
						<option type="orderable" value="name" />
						<option type="expression"
							value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name" />
						<option type="fieldCode" value="number" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="calendar" name="dateFrom" reference="dateFrom"
						field="dateFrom">
						<option type="required" value="true" />
						<option type="withTimePicker" value="true" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="gridLayout" name="gridQuantity"
						hasBorders="false" columns="3" rows="1">
						<layoutElement column="1" row="1" width="2">
							<component type="input" name="quantity" reference="quantity"
								field="plannedQuantity">
								<option type="alignment" value="right" />
								<option type="labelWidth" value="45" />
							</component>
						</layoutElement>
						<layoutElement column="3" row="1">
							 <component type="select" name="operationDurationQuantityUNIT"
								field="operationDurationQuantityUNIT" reference="operationDurationQuantityUNIT"
								hasLabel="false">
								<option type="required" value="true" />
								<option type="alingment" value="right" />
							</component>
						</layoutElement>
					</component>
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="lookup" name="productionLine" reference="productionLine"
						field="productionLine">
						<option type="required" value="true" />
						<option type="column" name="name" fields="name" link="true"
							width="300" />
						<option type="searchable" value="name,number" />
						<option type="orderable" value="name,number" />
						<option type="expression"
							value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name" />
						<option type="fieldCode" value="number" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="5">
					<component type="calendar" name="dateTo"
						reference="dateTo" field="generatedEndDate" defaultEnabled="false">
						<option type="withTimePicker" value="true" />
						<listener event="initialize"
							class="com.qcadoo.mes.productionScheduling.TimeTechnologyInOrderService"
							method="clearFieldValue" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="6">
					<component type="time" name="realizationTime"
						reference="realizationTime" field="realizationTime"
						hasDescription="true" required="true" defaultEnabled="false">
						<option type="labelWidth" value="80" />
					</component>
				</layoutElement>
			</component>
			<option type="header" value="true" />
			<option type="expression" value="" />
		</component>
		<option type="header" value="true" />
	</component>
</view>