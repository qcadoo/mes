<model name="orderOperationComponent" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="order" plugin="orders" model="order"
			required="true" />
		<belongsTo name="technology" plugin="technologies" model="technology"
			required="true" />
		<belongsTo name="operation" plugin="technologies" model="operation"
			required="true" />
		<belongsTo name="technologyOperationComponent" plugin="technologies"
			model="technologyOperationComponent" required="true" />
		<belongsTo name="parent" model="orderOperationComponent" />
		<enum name="entityType" values="operation" required="true"
			default="operation" />
		<hasMany name="children" model="orderOperationComponent"
			joinField="parent" cascade="delete" copyable="true" />
		<priority name="priority" scope="parent" />
		<integer name="tpz" default="0" required="true"/>
		<integer name="tj" default="0" required="true"/>
		<decimal name="productionInOneCycle" required="true" default="1" />
		<enum name="countRealized" values="01all,02specified" default="01all"
			required="true" />
		<decimal name="countMachine" default="0.0" required="true"/>
		<integer name="timeNextOperation" default="0" required="true"/>
		<decimal name="machineUtilization" required="true" default="1.0" >
			<validatesUnscaledValue max="3" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="laborUtilization" required="true" default="1.0">
			<validatesUnscaledValue max="3" />
			<validatesScale max="3" />
		</decimal>
		<integer name="operationOffSet" />
		<integer name="effectiveOperationRealizationTime" />
		<datetime name="effectiveDateFrom" />
		<datetime name="effectiveDateTo" />
		
		<string name="nodeNumber" />
	</fields>
	<hooks />
</model>