<model name="masterOrderPositionDto" activable="true" auditable="false" deletable="false" insertable="false"
       updatable="false"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <belongsTo name="masterOrder" model="masterOrder" persistent="false"/>

        <string name="masterOrderDefinitionNumber"/>
        <string name="number"/>
        <string name="name"/>
        <datetime name="deadline"/>
        <string name="companyName"/>
        <string name="companyCategory"/>
        <string name="companyPayer"/>
        <string name="masterOrderStatus"/>
        <string name="productNumber"/>
        <string name="productName"/>
        <string name="technologyName"/>
        <string name="salesPlanNumber"/>
        <string name="salesPlanName"/>
        <string name="masterOrderPositionStatus"/>
        <string name="comments"/>
        <decimal name="masterOrderQuantity"/>
        <decimal name="cumulatedMasterOrderQuantity"/>
        <decimal name="leftToRelease"/>
        <decimal name="producedOrderQuantity"/>
        <decimal name="quantityTakenFromWarehouse"/>
        <decimal name="quantityRemainingToOrder"/>
        <decimal name="quantityRemainingToOrderWithoutStock"/>
        <decimal name="warehouseMinimumStateQuantity"/>
        <decimal name="warehouseState"/>
        <decimal name="deliveredQuantity"/>
        <decimal name="produceQuantity"/>
        <string name="unit"/>
        <string name="assortmentName"/>
        <string name="modelName"/>

        <integer name="masterOrderId"/>
        <integer name="productId"/>
        <integer name="masterOrderProductId"/>

        <enum name="state" values="01new,02inExecution,03completed,04declined"/>
        <string name="description"/>
        <boolean name="warehouseOrder"/>
    </fields>

    <masterModel plugin="masterOrders" model="masterOrderProduct"/>
</model>
