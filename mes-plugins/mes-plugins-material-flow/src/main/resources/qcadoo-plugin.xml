<plugin plugin="materialFlow" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report"
	xsi:schemaLocation="
	   http://schema.qcadoo.org/modules/report 
	   http://schema.qcadoo.org/modules/report.xsd 
		http://schema.qcadoo.org/plugin 
		http://schema.qcadoo.org/plugin.xsd 
		http://schema.qcadoo.org/modules/model 
		http://schema.qcadoo.org/modules/model.xsd 
		http://schema.qcadoo.org/modules/view 
		http://schema.qcadoo.org/modules/view.xsd 
		http://schema.qcadoo.org/modules/menu 
		http://schema.qcadoo.org/modules/menu.xsd 
		http://schema.qcadoo.org/modules/localization 
		http://schema.qcadoo.org/modules/localization.xsd">

	<information>
		<name>MES - Material Flow Module</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>basic</plugin>
		</dependency>
		<dependency>
			<plugin>technologies</plugin>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model model="productQuantity" resource="model/productQuantity.xml" />
		<model:model model="transfer" resource="model/transfer.xml" />
		<model:model model="transferTemplate" resource="model/transferTemplate.xml" />
		<model:model model="transformations" resource="model/transformations.xml" />
		<model:model model="resource" resource="model/resource.xml" />
		<model:model model="stockAreas" resource="model/stockAreas.xml" />
		<model:model model="stockCorrection" resource="model/stockCorrection.xml" />
		<model:model model="materialsInStockAreas" resource="model/materialsInStockAreas.xml" />
		<model:model model="materialsInStockAreasComponent"
			resource="model/materialsInStockAreasComponent.xml" />
		
		<model:model-field plugin="basic" model="product">
			<model:hasMany name="transfer" plugin="materialFlow"
				model="transfer" joinField="product" />
		</model:model-field>

		<model:model-field plugin="basic" model="product">
			<model:hasMany name="stockCorrection" plugin="materialFlow"
				model="stockCorrection" joinField="product" />
		</model:model-field>

		<menu:menu-category name="materialFlow" />

		<menu:menu-item name="multitransfer" category="materialFlow"
			view="multitransfer" />
		<menu:menu-item name="transfers" category="materialFlow"
			view="transfersList" />
		<menu:menu-item name="transferTemplates" category="materialFlow"
			view="transferTemplatesList" />
		<menu:menu-item name="transformations" category="materialFlow"
			view="transformationsList" />
		<menu:menu-item name="resources" category="materialFlow"
			view="resourcesList" />
		<menu:menu-item name="stockAreass" category="materialFlow"
			view="stockAreasList" />
		<menu:menu-item name="stockCorrections" category="materialFlow"
			view="stockCorrectionsList" />
		
		<menu:menu-item name="materialsInStockAreas" category="materialFlow"
			view="materialsInStockAreasList" />

		<view:view resource="view/multitransfer.xml" />
		<view:view resource="view/transfersList.xml" />
		<view:view resource="view/transferDetail.xml" />
		<view:view resource="view/transferTemplatesList.xml" />
		<view:view resource="view/transferTemplateDetail.xml" />
		<view:view resource="view/transformationsList.xml" />
		<view:view resource="view/transformationsDetail.xml" />
		<view:view resource="view/resourcesList.xml" />
		<view:view resource="view/resourceDetail.xml" />
		<view:view resource="view/stockAreasList.xml" />
		<view:view resource="view/stockAreasDetail.xml" />
		<view:view resource="view/stockCorrectionsList.xml" />
		<view:view resource="view/stockCorrectionDetail.xml" />
		<view:view resource="view/materialsInStockAreasList.xml" />
		<view:view resource="view/materialsInStockAreasDetails.xml" />
		<view:view resource="view/materialsInStockAreasComponentDetails.xml" />

		<view:view-listener plugin="materialFlow" view="stockCorrectionDetail"
			component="form" event="refreshShouldBeInStockCorrectionDetail"
			class="com.qcadoo.mes.materialFlow.MaterialFlowService" method="refreshShouldBeInStockCorrectionDetail" />

		<view:view-hook plugin="materialFlow" view="stockCorrectionDetail"
			type="beforeRender" class="com.qcadoo.mes.materialFlow.MaterialFlowService"
			method="refreshShouldBeInStockCorrectionDetail" />
			
		<view:resource uri="public/**/*" />
	</modules>
	
</plugin>