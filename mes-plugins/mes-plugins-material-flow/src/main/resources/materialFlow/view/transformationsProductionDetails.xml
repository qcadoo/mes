<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view" 
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="transformationsProductionDetails"
	modelName="transfer">
	
	<component type="window" name="window" reference="window">
		<ribbon>
			<template name="standardFormTemplate" includeItems="navigation.back"/>
			<group name="actions">
				<bigButton name="save" icon="saveIcon24.png"
					action="#{form}.fireEvent(fillTransferProductionDataFromTransformation);" state="enabled" />
			</group>
		</ribbon>
		<component type="form" name="transformationsProduction" reference="form">
			<component type="gridLayout" name="gridLayout" columns="10" hasBorders="false"
				rows="5">
				<layoutElement column="1" row="1" width="6">
					<component type="input" name="number" field="number" reference="number" />
				</layoutElement>
				<layoutElement column="1" row="2" width="6">
					<component type="lookup" name="product" field="product" reference="product">
						<option type="searchable" value="name" />
						<option type="orderable" value=" name" />
						<option type="fullScreen" value="true" />
						<option type="expression" value="#name" />
						<option type="fieldCode" value="name" />
						<listener event="onSelectedEntityChange" class="com.qcadoo.mes.materialFlow.MaterialFlowService" method="fillUnitFieldValue" />
						<listener event="onSelectedEntityChange" class="com.qcadoo.mes.materialFlow.MaterialFlowService" method="generateNumberForTransfer" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="3" width="6">
					<component type="input" name="quantity" field="quantity" />
				</layoutElement>
				<layoutElement column="7" row="3" width="1">
					<component type="input" name="quantityUNIT" width="1"
						defaultEnabled="false" hasLabel="false" reference="quantityUNIT" />
				</layoutElement>
			</component>
			<option type="header" value="true" />
			<option type="expression" value="#number" />
			<listener event="fillTransferProductionDataFromTransformation"
				class="com.qcadoo.mes.materialFlow.MaterialFlowService" method="fillTransferProductionDataFromTransformation" />
		</component>
	</component>
</view>