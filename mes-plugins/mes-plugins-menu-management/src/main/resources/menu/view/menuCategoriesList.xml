<?xml version="1.0" encoding="UTF-8"?>

<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view" 
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="menuCategoriesList"
	modelPlugin="qcadooView"
	modelName="category"
	menuAccessible="true"
	defaultAuthorizationRole="ROLE_ADMIN">
	
	<component type="window" name="window" reference="window">
		<ribbon>
			<group template="gridNewAndRemoveAction" />
		</ribbon>
		<component type="grid" name="menuCategories" reference="grid">
			<option type="column" name="name" fields="name" link="true"
				width="600" />
			<option type="column" name="pluginIdentifier" fields="pluginIdentifier" link="false"
				width="600" />
			<option type="order" column="succession" direction="asc" />
			<option type="searchable" value="name,pluginIdentifier" />
			<option type="correspondingView" value="menu/menuCategoryDetails" />
			<option type="correspondingComponent" value="form" />
			<option type="fullscreen" value="true" />
		</component>
		<option type="fixedHeight" value="true" />
		<option type="header" value="false" />
		<script><![CDATA[
			this.addOnChangeListener({
				onSetValue: function(selectedEntitiesArray) {
					this.updateMenu();
				}
			});
		]]></script>
	</component>
	<preRenderHook bean="com.qcadoo.mes.menu.MenuAdministrationService" method="addRestrictionToCategoriesGrid" />
	<preRenderHook bean="com.qcadoo.mes.menu.MenuAdministrationService" method="translateCategoriesGrid" />
</view>