<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
	xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
	plugin="technologies" view="technologyDetails">

	<windowTab name="inProductsCostTab" reference="inProductsCostTab">
		<component type="gridLayout" name="gridLayout" hasBorders="false"
			columns="1" rows="1">
			<layoutElement column="1" row="1">
				<component type="grid" name="inProductsGrid" reference="inProductsGrid">

					<option type="column" name="number" fields="product"
						expression="#product['number']" width="100" />
					<option type="column" name="name" fields="product"
						expression="#product['name']" width="200" />
					<option type="column" name="typeOfMaterial" fields="product"
						expression="#product['typeOfMaterial'] == '01component' ?
										'@basic.product.typeOfMaterial.value.01component' :
										#product['typeOfMaterial'] == '02intermediate' ?
											'@basic.product.typeOfMaterial.value.02intermediate' :
											#product['typeOfMaterial'] == '03product' ?
												'@basic.product.typeOfMaterial.value.03product' :
												#product['typeOfMaterial'] == '04waste' ?
												'@basic.product.typeOfMaterial.value.04waste' :
												''" width="200" />

					<option type="column" name="nominalCost" fields="product"
						expression="#product['nominalCost'] != null ? 
							#product['nominalCost'] + ' / ' + #product['costForNumber'] + #product['unit'] : ''" />
					<option type="column" name="lastPurchaseCost" fields="product"
						expression="#product['lastPurchaseCost'] != null ? 
							#product['lastPurchaseCost'] + ' / ' + #product['costForNumber'] + #product['unit'] : ''" />
					<option type="column" name="averageCost" fields="product" 
						expression="#product['averageCost'] != null ? 
							#product['averageCost'] + ' / ' + #product['costForNumber'] + #product['unit'] : ''" />

					<option type="order" column="name" direction="asc" />
				</component>
			</layoutElement>
		</component>
	</windowTab>

</windowTabExtension>
