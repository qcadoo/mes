<model name="order" activable="true" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true">
			<validatesLength max="255" />
		</string>
		<string name="name" required="true">
			<validatesLength max="1024" />
		</string>
		<string name="description">
			<validatesLength max="2048" />
		</string>
		<datetime name="dateFrom" />
		<datetime name="dateTo" />
		<enum name="state"
			values="01pending,02accepted,03inProgress,04completed,05declined,06interrupted,07abandoned"
			required="true" />
		<belongsTo name="company" plugin="basic" model="company" />
		<belongsTo name="product" plugin="basic" model="product"
			required="true" />
		<string name="defaultTechnology" persistent="false" />
		<belongsTo name="technology" plugin="technologies" model="technology" />
		<decimal name="plannedQuantity" required="true">
			<validatesRange from="0" exclusively="true" />
			<validatesUnscaledValue max="5" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="doneQuantity">
			<validatesRange from="0" exclusively="false" />
			<validatesUnscaledValue max="5" />
			<validatesScale max="3" />
		</decimal>
		<datetime name="effectiveDateFrom" readonly="true" />
		<datetime name="effectiveDateTo" readonly="true" />
		<string name="externalNumber" />
		<boolean name="externalSynchronized" default="true" />
		<hasMany name="loggings" joinField="order" model="logging"
			cascade="delete" />
		<tree name="technologyInstanceOperationComponents" joinField="order" model="technologyInstanceOperationComponent" plugin="technologies"/>
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.orders.OrderService"
			method="checkOrderDates" />
		<validatesWith class="com.qcadoo.mes.orders.OrderService"
			method="checkOrderPlannedQuantity" />
		<validatesWith class="com.qcadoo.mes.basic.ProductService"
			method="checkIfProductIsNotRemoved" />
		<validatesWith class="com.qcadoo.mes.orders.OrderService"
			method="checkChosenTechnologyState" />
		<onSave class="com.qcadoo.mes.orders.OrderService" method="fillOrderDates" />
		<onCopy class="com.qcadoo.mes.orders.OrderService" method="clearOrderDatesOnCopy" />
		<onSave class="com.qcadoo.mes.orders.states.ChangeStateHook"
			method="changedState" />
		<onSave class="com.qcadoo.mes.orders.hooks.TechnologyOperCompHooksOrder" method="createTechnologyInstanceForOrder"/>
	</hooks>
	<identifier expression="#number + ' - ' + #name" />
</model>