<view defaultAuthorizationRole="ROLE_REQUIREMENTS" name="orderedProductDetails" modelName="orderedProduct"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      windowWidth="800" windowHeight="540">

    <component type="window" name="window">

        <ribbon>
            <template name="standardFormTemplate" excludeItems="actions.copy, actions.delete, actions.refresh"/>
        </ribbon>

        <windowTab name="mainTab">
            <component type="form" name="orderedProductDetails"
                       reference="form">
                <component type="gridLayout" name="gridLayout" columns="2"
                           rows="5">
                    <layoutElement column="1" row="1" width="2">
                        <component type="input" name="succession" reference="succession"
                                   field="succession" defaultEnabled="never"/>
                    </layoutElement>
                    <layoutElement column="1" row="2" width="2">
                        <component type="lookup" name="product" reference="product"
                                   field="product">
                            <option type="column" name="name" fields="name" link="true"/>

                            <option type="searchable" value="name,number"/>
                            <option type="orderable" value="name,number"/>

                            <option type="expression"
                                    value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name"/>
                            <option type="fieldCode" value="number"/>

                            <listener event="onSelectedEntityChange"
                                      class="com.qcadoo.mes.deliveries.listeners.OrderedProductDetailsListeners"
                                      method="fillUnitFields"/>
                            <listener
                                    class="com.qcadoo.mes.deliveries.listeners.OrderedProductDetailsListeners"
                                    method="fillCurrencyFields"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="3" width="2">
                        <component type="lookup" name="additionalCode" reference="additionalCode"
                                   field="#{form}.additionalCode">

                            <option type="searchable" value="code"/>
                            <option type="orderable" value="code"/>

                            <option type="expression"
                                    value="#code"/>
                            <option type="fieldCode" value="code"/>

                            <criteriaModifier
                                    class="com.qcadoo.mes.deliveries.criteriaModifiers.OrderedProductCriteriaModifiers"
                                    method="restrictAdditionalCodesForProduct"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="4">
                        <component type="gridLayout" name="gridLayoutOrderedQuantity"
                                   hasBorders="false" columns="4" rows="3">
                            <layoutElement column="1" row="1" width="3">
                                <component type="input" name="orderedQuantity"
                                           reference="orderedQuantity" field="orderedQuantity">
                                    <option type="alignment" value="right"/>
                                    <option type="labelWidth" value="45"/>

                                    <listener event="onInputChange" method="quantityChange"
                                              class="com.qcadoo.mes.deliveries.listeners.OrderedProductDetailsListeners"/>
                                </component>
                            </layoutElement>
                            <layoutElement column="4" row="1">
                                <component type="input" name="orderedQuantityUnit"
                                           defaultEnabled="never" hasLabel="false" reference="orderedQuantityUnit">
                                    <option type="textRepresentationOnDisabled" value="true"/>
                                </component>
                            </layoutElement>
                            <layoutElement column="1" row="2" width="3">
                                <component type="input" name="additionalQuantity"
                                           reference="additionalQuantity" field="additionalQuantity">
                                    <option type="alignment" value="right"/>
                                    <option type="labelWidth" value="45"/>

                                    <listener event="onInputChange" method="additionalQuantityChange"
                                              class="com.qcadoo.mes.deliveries.listeners.OrderedProductDetailsListeners"/>
                                </component>
                            </layoutElement>
                            <layoutElement column="4" row="2">
                                <component type="input" name="additionalQuantityUnit"
                                           defaultEnabled="never" hasLabel="false" reference="additionalQuantityUnit">
                                    <option type="textRepresentationOnDisabled" value="true"/>
                                </component>
                            </layoutElement>
                            <layoutElement column="1" row="3" width="3">
                                <component type="input" name="conversion"
                                           reference="conversion" field="conversion">
                                    <option type="alignment" value="right"/>
                                    <option type="labelWidth" value="45"/>

                                    <listener event="onInputChange" method="quantityChange"
                                              class="com.qcadoo.mes.deliveries.listeners.OrderedProductDetailsListeners"/>
                                </component>
                            </layoutElement>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="5">
                        <component type="borderLayout" name="priceBorderLayout">
                            <option type="label" value="priceLabel"/>
                            <component type="gridLayout" name="priceGridLayout"
                                       columns="1" rows="2" reference="priceGridLayout">
                                <layoutElement column="1" row="1">
                                    <component type="gridLayout" name="totalPriceGridLayout"
                                               hasBorders="false" columns="4" rows="1">
                                        <layoutElement column="1" row="1" width="3">
                                            <component type="input" name="totalPrice"
                                                       field="#{form}.totalPrice" reference="totalPrice">
                                                <option type="alignment" value="right"/>
                                                <option type="labelWidth" value="45"/>

                                                <listener event="onInputChange" method="calculatePriceFromTotalPrice"
                                                          class="com.qcadoo.mes.deliveries.listeners.OrderedProductDetailsListeners"/>
                                            </component>
                                        </layoutElement>
                                        <layoutElement column="4" row="1">
                                            <component type="input" name="totalPriceCurrency"
                                                       reference="totalPriceCurrency" defaultEnabled="never"
                                                       hasLabel="false">
                                                <option type="textRepresentationOnDisabled" value="true"/>
                                            </component>
                                        </layoutElement>
                                    </component>
                                </layoutElement>
                                <layoutElement column="1" row="2">
                                    <component type="gridLayout" name="pricePerUnitGridLayout"
                                               hasBorders="false" columns="4" rows="1">
                                        <layoutElement column="1" row="1" width="3">
                                            <component type="input" name="pricePerUnit"
                                                       field="#{form}.pricePerUnit" reference="pricePerUnit">
                                                <option type="alignment" value="right"/>
                                                <option type="labelWidth" value="45"/>

                                                <listener event="onInputChange" method="calculatePriceFromPricePerUnit"
                                                          class="com.qcadoo.mes.deliveries.listeners.OrderedProductDetailsListeners"/>
                                            </component>
                                        </layoutElement>
                                        <layoutElement column="4" row="1">
                                            <component type="input" name="pricePerUnitCurrency"
                                                       reference="pricePerUnitCurrency" defaultEnabled="never"
                                                       hasLabel="false">
                                                <option type="textRepresentationOnDisabled" value="true"/>
                                            </component>
                                        </layoutElement>
                                    </component>
                                </layoutElement>
                            </component>
                        </component>
                    </layoutElement>
                    <layoutElement column="2" row="4" height="2">
                        <component type="textarea" name="description" reference="description"
                                   field="description">
                        </component>
                    </layoutElement>
                </component>

                <option type="header" value="true"/>
                <option type="expression" value="#name"/>
            </component>
        </windowTab>
        <windowTab name="reservationsTab">
            <component type="gridLayout" name="gridsLayout" columns="1" rows="5" hasBorders="false">
                <layoutElement column="1" row="1" width="1" height="5">
                    <component type="grid" name="orderedProductReservations" source="#{form}.reservations">
                        <option type="column" name="number" fields="location" expression="#location['number']"
                                link="true" width="50"/>
                        <option type="column" name="name" fields="location" expression="#location['name']" link="true"
                                width="100"/>
                        <option type="column" name="orderedQuantity" fields="orderedQuantity" width="40"/>
                        <option type="column" name="orderedQuantityUnit" fields="orderedQuantityUnit" width="20"/>
                        <option type="column" name="additionalQuantity" fields="additionalQuantity" width="40"/>
                        <option type="column" name="additionalQuantityUnit" fields="additionalQuantityUnit" width="20"/>

                        <option type="order" column="number" direction="desc"/>

                        <option type="correspondingView" value="deliveries/orderedProductReservationDetails"/>
                        <option type="correspondingComponent" value="form"/>
                        <option type="correspondingViewInModal" value="true"/>
                        <option type="orderable"
                                value="number,name,orderedQuantity,additionalQuantityUnit,orderedQuantityUnit,additionalQuantity"/>
                        <option type="searchable"
                                value="number,name,orderedQuantity,additionalQuantityUnit,orderedQuantityUnit,additionalQuantity"/>

                        <option type="paginable" value="false"/>
                        <option type="creatable" value="true"/>
                        <option type="deletable" value="true"/>
                        <option type="fullscreen" value="true"/>
                        <option type="multiselect" value="true"/>
                    </component>
                </layoutElement>
            </component>
        </windowTab>

    </component>

    <hooks>
        <beforeRender
                class="com.qcadoo.mes.deliveries.hooks.OrderedProductDetailsHooks"
                method="fillUnitFields"/>
        <beforeRender
                class="com.qcadoo.mes.deliveries.hooks.OrderedProductDetailsHooks"
                method="fillCurrencyFields"/>
    </hooks>

</view>