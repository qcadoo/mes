<model name="productStructureTreeNode" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	auditable="true" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" />
		<belongsTo name="technology" model="technology" />
		<belongsTo name="product" plugin="basic" model="product" persistent="false"/>
		<belongsTo name="operation" model="technologyOperationComponent" persistent="false"/>
		<decimal name="quantity" persistent="false" />
		
		<hasMany name="children" model="productStructureTreeNode" joinField="parent" cascade="delete" />
		<belongsTo name="parent" model="productStructureTreeNode" />
		<priority name="priority" scope="parent" />
		<string name="nodeNumber" />
		<enum name="entityType" values="productStructureTreeNode" default="productStructureTreeNode"
			persistent="false" />
	</fields>
	<hooks>
	</hooks>
	<identifier expression="#number" />
</model>