<model name="technology" activable="true" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true">
			<validatesLength max="255" />
		</string>
		<string name="name" required="true">
			<validatesLength max="2048" />
		</string>

		<belongsTo name="product" plugin="basic" model="product"
			lazy="false" required="true" />
		
		<belongsTo name="technologyGroup" plugin="technologies" model="technologyGroup" 
			lazy="false" />
				
		<boolean name="master" default="true" />
		<string name="description">
			<validatesLength max="2048" />
		</string>
		<tree name="operationComponents" model="technologyOperationComponent"
			joinField="technology" cascade="delete" copyable="true" />
		<enum name="state" values="01draft,02accepted,03declined,04outdated,05checked"
			default="01draft" required="true" />
		<hasMany name="stateChanges" joinField="technology" model="technologyStateChange"
			cascade="delete" />
		
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.technologies.TechnologyService"
			method="checkTechnologyDefault" />
		<validatesWith class="com.qcadoo.mes.basic.ProductService"
			method="checkIfProductIsNotRemoved" />
<!-- 		<validatesWith class="com.qcadoo.mes.technologies.TechnologyService" -->
<!-- 			method="checkIfUnitSampligNrIsReq" /> -->
		<validatesWith class="com.qcadoo.mes.technologies.TechnologyService"
			method="checkIfTechnologyHasAtLeastOneComponent" />
		<validatesWith class="com.qcadoo.mes.technologies.TechnologyService"
			method="checkTopComponentsProducesProductForTechnology" />
		<validatesWith class="com.qcadoo.mes.technologies.TechnologyService"
			method="checkIfAllReferenceTechnologiesAreAceepted" />
		<validatesWith class="com.qcadoo.mes.technologies.TechnologyService"
			method="checkIfOperationsUsesSubOperationsProds" />
		<validatesWith class="com.qcadoo.mes.technologies.validators.TechnologyTreeValidators"
			method="checkConsumingTheSameProductFromManySubOperations" />
		<validatesWith class="com.qcadoo.mes.technologies.validators.TechnologyModelValidators"
			method="checkIfTreeOperationIsValid" />	 
		<onCreate class="com.qcadoo.mes.technologies.hooks.TechnologyModelHooks" 
			method="setInitialState" />
		<onCopy class="com.qcadoo.mes.technologies.hooks.TechnologyModelHooks" 
			method="setInitialState" />
		<onCopy class="com.qcadoo.mes.technologies.TechnologyService"
			method="clearMasterOnCopy" />
		<onCopy class="com.qcadoo.mes.technologies.TechnologyService"
			method="switchStateToDraftOnCopy" />
		<onSave class="com.qcadoo.mes.technologies.TechnologyService"
			method="setFirstTechnologyAsDefault" />
		<onUpdate class="com.qcadoo.mes.technologies.TechnologyService"
			method="performTreeNumbering" />
	</hooks>
	<identifier expression="#number + ' - ' + #name" />
</model>