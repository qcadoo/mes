<model name="negotiationProduct" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="negotiation" model="negotiation" required="true" />
		<belongsTo name="product" model="product" plugin="basic"
			required="true" />		
		<decimal name="neededQuantity" required="true">
			<validatesRange from="0" exclusively="true" />
		</decimal>		
		<decimal name="approvedDeliveredQuantity">
			<validatesRange from="0" />
		</decimal>
		<decimal name="draftDeliveredQuantity">
			<validatesRange from="0" />
		</decimal>
		<decimal name="leftQuantity">
			<validatesRange from="0" />
		</decimal>	
		<datetime name="dueDate" required="true" />
		<integer name="requestForQuotationsNumber">
			<validatesRange from="0" />
		</integer>
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.supplyNegotiations.hooks.NegotiationProductHooks"
			method="checkIfNegotiationProductAlreadyExists" />		
		<onSave class="com.qcadoo.mes.supplyNegotiations.hooks.NegotiationProductHooks"
			method="updateRequestForQuotationsNumber" />					
	</hooks>
</model>
