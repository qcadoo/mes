<qcd:models plugin="dictionaries" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="dictionary" deletable="false">
		<string name="name" >
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<string name="label" >
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<hasMany name="dictionaryItems" model="dictionaryItem" joinField="dictionary" cascade="delete" />
	</model>
	<model name="dictionaryItem">
		<string name="name" >
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="40"/>
		</string>
		<string name="description" >
			<validatesLength max="255"/>
		</string>
		<belongsTo name="dictionary" model="dictionary" lookupField="name">
			<validatesPresence />
		</belongsTo>
	</model>
</qcd:models>