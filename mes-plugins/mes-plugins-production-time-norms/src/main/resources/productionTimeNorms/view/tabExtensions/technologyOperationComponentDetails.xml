<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
	xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
	plugin="technologies" view="technologyOperationComponentDetails">

	<windowTab name="norm" reference="norm">
		<component type="gridLayout" name="gridsLayout" columns="8"
			rows="4" hasBorders="false">
			<layoutElement column="1" row="1" width="3">
				<component type="time" name="tpz" field="#{form}.tpz"
					reference="tpz" defaultEnabled="false" />
			</layoutElement>
			<layoutElement column="1" row="2" width="3">
				<component type="time" name="tj" field="#{form}.tj"
					reference="tj" defaultEnabled="false" />
			</layoutElement>
			<layoutElement column="1" row="3" width="3">
				<component type="gridLayout" name="gridsLayoutUnit1" columns="4"
					rows="1" hasBorders="false">
					<layoutElement column="1" row="1" width="3">
						<component type="input" name="productionInOneCycle"
							field="#{form}.productionInOneCycle" reference="productionInOneCycle"
							defaultEnabled="true"  >
							<option type="labelWidth" value="40" />
							</component>
					</layoutElement>
					<layoutElement column="4" row="1" width="1">
						<component type="input" name="productionInOneCycleUNIT"
							defaultEnabled="false" hasLabel="false" reference="productionInOneCycleUNIT" />
					</layoutElement>
				</component>
			</layoutElement>
			<layoutElement column="1" row="4" width="3">
				<component type="time" name="timeNextOperation" field="#{form}.timeNextOperation"
					reference="timeNextOperation" hasDescription="true" defaultEnabled="false" />
			</layoutElement>
			<layoutElement column="5" row="1" width="3">
				<component type="input" name="machineUtilization" field="#{form}.machineUtilization"
					reference="machineUtilization" defaultEnabled="true" />
			</layoutElement>
			<layoutElement column="5" row="2" width="3">
				<component type="input" name="laborUtilization" field="#{form}.laborUtilization"
					reference="laborUtilization" defaultEnabled="true" />
			</layoutElement>
			<layoutElement column="5" row="3" width="3">
				<component type="select" name="countRealized" field="#{form}.countRealized"
					reference="countRealized" hasDescription="true" defaultEnabled="false">
					<option type="required" value="true" />
					<listener event="onSelectedEntityChange"
						class="com.qcadoo.mes.productionTimeNorms.NormService" method="changeCountRealizedNorm" />
				</component>
			</layoutElement>
			<layoutElement column="5" row="4" width="3">
				<component type="gridLayout" name="gridsLayoutUnit2" columns="4"
					rows="1" hasBorders="false">
					<layoutElement column="1" row="1" width="3">
						<component type="input" name="countMachine" field="#{form}.countMachine"
							reference="countMachine" hasDescription="true" defaultEnabled="false" >
							<option type="labelWidth" value="40" />
						</component>
					</layoutElement>
					<layoutElement column="4" row="1" width="1">
						<component type="input" name="countMachineUNIT"
							defaultEnabled="false" defaultVisible="false" hasLabel="false"
							reference="countMachineUNIT" />
					</layoutElement>
				</component>
			</layoutElement>
		</component>
	</windowTab>
</windowTabExtension>