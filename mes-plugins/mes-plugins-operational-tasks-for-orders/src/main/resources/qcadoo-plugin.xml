<plugin plugin="operationalTasksForOrders" group="planning"
	version="${qcadoo.plugin.version}" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/plugin" xmlns:model="http://schema.qcadoo.org/modules/model"
	xmlns:view="http://schema.qcadoo.org/modules/view" xmlns:menu="http://schema.qcadoo.org/modules/menu"
	xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/report
       http://schema.qcadoo.org/modules/report.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Operational tasks for orders</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
		<description>Integrates operational tasks with production orders.</description>
		<license>AGPL</license>
	</information>

	<dependencies>
		<dependency>
			<plugin>operationalTasks</plugin>
			<version>[1.1.7</version>
		</dependency>
		<dependency>
			<plugin>productionScheduling</plugin>
			<version>[1.1.7</version>
		</dependency>
		<dependency>
			<plugin>materialRequirements</plugin>
			<version>[1.1.7</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model model="techOperCompOperationalTasks"
			resource="model/techOperCompOperationalTasks.xml" />

		<model:model-field model="operationalTask" plugin="operationalTasks">
			<model:belongsTo name="order" model="order" plugin="orders" />
		</model:model-field>
		<model:model-field model="operationalTask" plugin="operationalTasks">
			<model:belongsTo name="technology" model="technology"
				plugin="technologies" persistent="false" />
		</model:model-field>
		<model:model-field model="operationalTask" plugin="operationalTasks">
			<model:belongsTo name="techOperCompOperationalTasks"
				model="techOperCompOperationalTasks" plugin="operationalTasksForOrders" />
		</model:model-field>
		<model:model-field model="operationalTask" plugin="operationalTasks">
			<model:belongsTo name="technologyOperationComponent" plugin="technologies"
			model="technologyOperationComponent" persistent="false" />
		</model:model-field>
		<model:model-enum-value model="operationalTask"
			plugin="operationalTasks" value="02executionOperationInOrder" enum="typeTask" />
		<model:model-field model="order" plugin="orders">
			<model:hasMany name="operationalTasks" joinField="order"
				model="operationalTask" cascade="delete" plugin="operationalTasks" />
		</model:model-field>

		<model:model-enum-value plugin="basic" model="parameter"
			value="02startOperationalTask" enum="inputProductsRequiredForType" />

		<model:model-enum-value plugin="orders" model="order"
			value="02startOperationalTask" enum="inputProductsRequiredForType" />

		<model:model-hook model="operationalTask" plugin="operationalTasks">
			<model:validatesWith
				class="com.qcadoo.mes.operationalTasksForOrders.validators.OperationalTaskValidatorsOTFO"
				method="validatesWith" />
		</model:model-hook>
		
		<model:model-hook model="operationalTask" plugin="operationalTasks">
			<model:onSave
				class="com.qcadoo.mes.operationalTasksForOrders.hooks.OperationalTaskHooksOTFO"
				method="onSave" />
		</model:model-hook>

		<model:model-hook model="operation" plugin="technologies">
			<model:onSave
				class="com.qcadoo.mes.operationalTasksForOrders.hooks.OperationHooksOTFO"
				method="changedNameInOperationalTasksWhenChanged" />
		</model:model-hook>

		<model:model-hook model="technologyOperationComponent"
			plugin="technologies">
			<model:onSave
				class="com.qcadoo.mes.operationalTasksForOrders.hooks.TechnologyOperationComponentHooksOTFO"
				method="changeDescriptionInOperationalTasksWhenChanged" />
		</model:model-hook>

		<model:model-hook model="order" plugin="orders">
			<model:onSave
				class="com.qcadoo.mes.operationalTasksForOrders.hooks.OrderHooksOTFO"
				method="changedProductionLineInOperationalTasksWhenChanged" />
		</model:model-hook>

		<view:view-tab resource="view/tabExtensions/operationalTaskDetails.xml" />

		<view:view-ribbon-group
			resource="view/ribbonExtensions/operationalTaskDetails.xml" />
		<view:view-ribbon-group
			resource="view/ribbonExtensions/operationDurationDetailsInOrder.xml" />

		<view:view-grid-column plugin="operationalTasks"
			view="operationalTasksList" component="grid">
			<view:column name="orderNumber" fields="order"
				expression="#order['number']" orderable="true" searchable="true" />
			<view:column name="technology" fields="order"
				expression="#order['technology'].get('number')" orderable="true"
				searchable="true" />
			<view:column name="techOperCompNodeNumber" fields="techOperCompOperationalTasks"
				expression="#techOperCompOperationalTasks?.get('technologyOperationComponent')?.get('nodeNumber')"
				orderable="true" searchable="true" />
			<view:column name="techOperCompNumber" fields="techOperCompOperationalTasks"
				expression="#techOperCompOperationalTasks?.get('technologyOperationComponent')?.get('operation')?.getStringField('number')"
				orderable="true" searchable="true" />
		</view:view-grid-column>

		<view:view-hook view="operationalTaskDetails" plugin="operationalTasks"
			type="beforeRender"
			class="com.qcadoo.mes.operationalTasksForOrders.hooks.OperationalTaskDetailsHooksOTFO"
			method="setTechnology" />

		<view:view-hook view="operationalTaskDetails" plugin="operationalTasks"
			type="beforeRender"
			class="com.qcadoo.mes.operationalTasksForOrders.hooks.OperationalTaskDetailsHooksOTFO"
			method="setTechnologyOperationComponent" />

		<view:view-hook view="operationalTasksList" plugin="operationalTasks"
			type="beforeRender"
			class="com.qcadoo.mes.operationalTasksForOrders.hooks.OperationalTasksListHooksOTFO"
			method="addDiscriminatorRestrictionToGrid" />
		
		<view:view-hook view="operationalTaskDetails" plugin="operationalTasks"
			type="beforeRender"
			class="com.qcadoo.mes.operationalTasksForOrders.hooks.OperationalTaskDetailsHooksOTFO"
			method="disableFieldsWhenOrderTypeIsSelected" />

		<view:view-hook view="operationalTaskDetails" plugin="operationalTasks"
			type="beforeRender"
			class="com.qcadoo.mes.operationalTasksForOrders.hooks.OperationalTaskDetailsHooksOTFO"
			method="disableButtons" />
			
		<view:view-hook view="operationDurationDetailsInOrder"
			plugin="productionScheduling" type="beforeRender"
			class="com.qcadoo.mes.operationalTasksForOrders.hooks.OperationDurationDetailsInOrderDetailsHooksOTFO"
			method="disableCreateButton" />

		<view:view-listener view="operationalTaskDetails"
			plugin="operationalTasks" component="typeTask" event="onSelectedEntityChange"
			class="com.qcadoo.mes.operationalTasksForOrders.listeners.OperationalTaskDetailsListenersOTFO"
			method="disableFieldsWhenOrderTypeIsSelected" />

		<view:view-listener view="operationalTaskDetails"
			plugin="operationalTasks" component="typeTask" event="onSelectedEntityChange"
			class="com.qcadoo.mes.operationalTasksForOrders.listeners.OperationalTaskDetailsListenersOTFO"
			method="disableButtons" />

		<view:view-listener view="operationalTaskDetails"
			plugin="operationalTasks" component="form" event="showOrder"
			class="com.qcadoo.mes.operationalTasksForOrders.listeners.OperationalTaskDetailsListenersOTFO"
			method="showOrder" />

		<view:view-listener view="operationalTaskDetails"
			plugin="operationalTasks" component="form" event="showOperationParameters"
			class="com.qcadoo.mes.operationalTasksForOrders.listeners.OperationalTaskDetailsListenersOTFO"
			method="showOperationParameters" />

		<view:view-listener view="operationalTaskDetails"
			plugin="operationalTasks" component="form" event="showOperationalTasksWithOrder"
			class="com.qcadoo.mes.operationalTasksForOrders.listeners.OperationalTaskDetailsListenersOTFO"
			method="showOperationalTasksWithOrder" />

		<view:view-listener view="operationalTasksList"
			plugin="operationalTasks" component="productIn" event="onSelectedEntityChange"
			class="com.qcadoo.mes.operationalTasksForOrders.listeners.OperationalTasksListListenersOTFO"
			method="addDiscriminatorRestrictionToGrid" />

		<view:view-listener view="operationalTasksList"
			plugin="operationalTasks" component="productOut" event="onSelectedEntityChange"
			class="com.qcadoo.mes.operationalTasksForOrders.listeners.OperationalTasksListListenersOTFO"
			method="addDiscriminatorRestrictionToGrid" />

		<view:view-listener view="operationDurationDetailsInOrder"
			plugin="productionScheduling" component="form" event="createOperationalTasks"
			class="com.qcadoo.mes.operationalTasksForOrders.listeners.OperationDurationDetailsInOrderDetailsListenersOTFO"
			method="createOperationalTasks" />
	</modules>
	
	<features>
		<end-user />
		<internal-integration />
	</features>

</plugin>