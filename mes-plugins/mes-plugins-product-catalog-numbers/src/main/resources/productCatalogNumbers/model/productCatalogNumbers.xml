<?xml version="1.0" encoding="UTF-8"?>
<model name="productCatalogNumbers" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="catalogNumber" required="true" >
			<validatesLength max="256" />
		</string>
		<belongsTo name="product" model="product" plugin="basic" required="true"/>
		<belongsTo name="company" model="company" plugin="basic" required="true"/>
	</fields>
	<hooks >
		<validatesWith class="com.qcadoo.mes.productCatalogNumbers.hooks.ProductCatalogNumbersHooks" method="checkIfExistsCatalogNumberWithProductAndCompany" />
		<validatesWith class="com.qcadoo.mes.productCatalogNumbers.hooks.ProductCatalogNumbersHooks" method="checkIfExistsCatalogNumberWithNumberAndCompany" />
 	</hooks>
	<identifier expression="#number + ' - ' + #company.get('name')" />
</model>