<model name="materialRequirement" activable="true"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="name" >
			<validatesLength max="1024" />
		</string>
		<string name="number" required="true" unique="true">
			<validatesLength max="256" />
		</string>
		<datetime name="date" />
		<string name="worker" />
		<enum values="01onlyComponents,02allProductsIn" name="mrpAlgorithm" default="01onlyComponents" required="true" />
		<boolean name="generated" />
		<string name="fileName" />

		<manyToMany name="orders" joinField="materialRequirements"
			model="order" plugin="orders" />
	</fields>
	<hooks>
		<onCopy
			class="com.qcadoo.mes.materialRequirements.internal.MaterialRequirementService"
			method="clearGeneratedOnCopy" />
	</hooks>
	<identifier expression="#name" />
</model>