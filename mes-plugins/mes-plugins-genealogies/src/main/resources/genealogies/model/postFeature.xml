<model name="postFeature" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<dictionary name="value" dictionary="posts" required="true">
			<validatesLength max="255" />
		</dictionary>
		<date name="date" readonly="true" />
		<string name="worker" readonly="true" />
		<string name="workerAndDate" expression="#worker + ' (' + #date + ')'"
			default="-" />
		<belongsTo name="genealogy" model="genealogy" />
	</fields>
	<hooks>
		<onSave class="com.qcadoo.mes.genealogies.AutoGenealogyService"
			method="fillLastUsedPostFeature" />
	</hooks>
</model>