<model name="parameterInputColumn" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="parameter" plugin="basic" model="parameter" required="true" />
		
		<belongsTo name="columnForInputProducts" plugin="workPlans" model="columnForInputProducts" required="true" lazy="false" />
		
		<priority name="succession" />
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.workPlans.hooks.ParameterColumnModelValidators" method="checkIfColumnForInputProductsIsNotAlreadyUsed" />
	</hooks>
</model>
