<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
	xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
	plugin="technologies" 
	view="operationDetails">

	<windowTab name="workPlansBasicTab" reference="workPlansBasicTab">
		<component type="gridLayout" name="workPlansBasicGridLayout" columns="3" rows="5">
			<layoutElement column="1" row="1">
				<component type="label" name="workPlansBasicTabWelcome">
					<option type="labelStyle" value="text" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="2">
				<component type="checkbox" name="hideDescriptionInWorkPlans" field="#{form}.hideDescriptionInWorkPlans" reference="hideDescriptionInWorkPlans">
					<option type="labelWidth" value="80" />
					<option type="align" value="right" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="3">
				<component type="checkbox" name="hideDetailsInWorkPlans" field="#{form}.hideDetailsInWorkPlans" reference="hideDetailsInWorkPlans">
					<option type="labelWidth" value="80" />
					<option type="align" value="right" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="4">
				<component type="checkbox" name="hideTechnologyAndOrderInWorkPlans" field="#{form}.hideTechnologyAndOrderInWorkPlans" reference="hideTechnologyAndOrderInWorkPlans">
					<option type="labelWidth" value="80" />
					<option type="align" value="right" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="5">
				<component type="file" name="imageUrlInWorkPlan" field="#{form}.imageUrlInWorkPlan" reference="imageUrlInWorkPlan" />
			</layoutElement>
		</component>
	</windowTab>
	<windowTab name="workPlansProductsTab" reference="workPlansProductsTab">
		<component type="gridLayout" name="workPlansProductsGridLayout" columns="2" rows="3">
			<layoutElement column="1" row="1" width="2">
				<component type="label" name="workPlansProductsTabWelcome">
					<option type="labelStyle" value="text" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="2">
				<component type="checkbox" name="dontPrintInputProductsInWorkPlans" field="#{form}.dontPrintInputProductsInWorkPlans" reference="dontPrintInputProductsInWorkPlans">
					<option type="labelWidth" value="80" />
					<option type="align" value="right" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="3">
				<component type="grid" name="columnsForInputProducts" source="#{form}.operationInputComponents" reference="columnsForInputProducts" >
					<option type="column" name="name" fields="columnForInputProducts" expression="'@' + #columnForInputProducts.get('columnDefinition').get('name')" />
	
					<option type="order" column="succession" direction="desc" />
					
					<option type="correspondingView" value="workPlans/operationInputComponentDetails" />
					<option type="correspondingComponent" value="form" />
					<option type="correspondingViewInModal" value="true" />
						
					<option type="creatable" value="true" />
					<option type="deletable" value="true" />
					<option type="fullscreen" value="true" />
					<option type="multiselect" value="true" />
				</component>
			</layoutElement>
			<layoutElement column="2" row="2">
				<component type="checkbox" name="dontPrintOutputProductsInWorkPlans" field="#{form}.dontPrintOutputProductsInWorkPlans" reference="dontPrintOutputProductsInWorkPlans">
					<option type="labelWidth" value="80" />
					<option type="align" value="right" />
				</component>
			</layoutElement>
			<layoutElement column="2" row="3">
				<component type="grid" name="columnsForOutputProducts" source="#{form}.operationOutputComponents" reference="columnsForOutputProducts" >
					<option type="column" name="name" fields="columnForOutputProducts" expression="'@' + #columnForOutputProducts.get('columnDefinition').get('name')" />

					<option type="order" column="succession" direction="desc" />
					
					<option type="correspondingView" value="workPlans/operationOutputComponentDetails" />
					<option type="correspondingComponent" value="form" />
					<option type="correspondingViewInModal" value="true" />
					
					<option type="creatable" value="true" />
					<option type="deletable" value="true" />
					<option type="fullscreen" value="true" />
					<option type="multiselect" value="true" />
				</component>
			</layoutElement>
		</component>
	</windowTab>
	
</windowTabExtension>