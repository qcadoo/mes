<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="orderOperationOutputComponentDetails" 
	modelName="orderOperationOutputComponent">
	
	<component name="window" type="window" reference="window">
		<ribbon>
			<template name="standardFormTemplate" />
		</ribbon>
		
		<windowTab name="mainTab" reference="mainTab">
			<component type="form" name="form" reference="form">
				<script>
					<![CDATA[
						var listener = {
					    	onSetValue: function() {
								var isSaved = (#{form}.getValue().content && #{form}.getValue().content.entityId);
								
								if (isSaved) { 
									#{columnForOutputProductsLookup}.setEnabled(false, true);
								} else {
									#{columnForOutputProductsLookup}.setEnabled(true, true);
								}
							}
						};
						
						#{form}.addOnChangeListener(listener);
					]]>	 
				</script>
				<component type="gridLayout" name="orderOperationOutputComponentGridLayout" columns="4" rows="1" hasBorders="false">

					<layoutElement column="1" row="1" width="3">
						<component type="lookup" name="columnForOutputProducts" field="columnForOutputProducts" reference="columnForOutputProductsLookup">
							<option type="column" name="name" fields="columnDefinition" expression="'@' + #columnDefinition.get('name')" link="true" />
							<option type="column" name="description" fields="columnDefinition" expression="'@' + #columnDefinition.get('description')" />

							<option type="orderable" value="name,description" />
							
							<option type="expression" value="'@' + #columnDefinition.get('name')" />
							<option type="fieldCode" value="columnDefinition" />	
						</component>
					</layoutElement>
				</component>
				
				<option type="header" value="true" />
				<option type="expression" value="#name" />
			
			</component>
		</windowTab>
		 
	</component>
	
	<hooks>
	</hooks>
</view>